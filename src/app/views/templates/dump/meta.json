{
    "title": {
        "name"      : "Page title",
        "type"      : "text"
    },
    "tagline": {
        "name"      : "Category tagline (if any)",
        "type"      : "text",
        "optional"  : true
    },
    "description": {
        "name"      : "Description",
        "type"      : "longtext"
    },
    "bgcolor": {
        "name"      : "Background color",
        "type"      : "color",
        "default"   : "transparent"
    },
    "background_image": {
        "name"      : "Background image",
        "type"      : "text",
        "default"   : "bg1.jpg",
        "optional"  : true
    },
    "time": {
        "name"      : "Time",
        "type"      : "time"
    },
    "date": {
        "name"      : "Date",
        "type"      : "date"
    },
    "datetime": {
        "name"      : "Date Time",
        "type"      : "datetime"
    },
    "list": {
        "name"      : "List",
        "type"      : "list",
        "listType"  : "date"
    },
    "ext_data": {
        "name"      : "External",
        "type"      : "external",
        "path"      : "**/",
        "template"  : "{{template}}[[:digit:]]",
        "data"      : {
            "title"     : "title"
        }
    }
}
